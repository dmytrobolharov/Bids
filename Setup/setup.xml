        <node name="nInstallPlmOnServices" text="" description="" plugin="InstallPlmOnServices" />
        <!-- <node name="nDatabaseServerLanguagePack" text="" description="" plugin="InstallLanguagePack" enabled="false" ensureVisible="true"/> -->
      </node>

