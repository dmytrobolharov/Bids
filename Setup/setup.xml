<setup>

  <!-- The Task Tree  
    o Build a complete tree here
    o Each plugin gets loaded exactly once, will only be bound to the LAST node it's 
        name is found in
    o Typical node looks like so:
          <node name="nUsers" text="" description="" plugin="CreateUsersAndGroups" />
      name: name of node in tree
      text: visible text in tree (overrides plugin.text)
      description: tooltip (overrides plugin.description)
      plugin: the plugin to bind here 
		This is also the DLL name without extension.
		By convention the dll should expose the same name via its NAME property
      
    o Optional node attribute: ensureVisible (boolean)
  -->
  <TaskTree>
    <node name="nInstallEverything" text="Complete Installation" description="Installs everything." >

      <node name="nAppServer" text="Application Server" description="Install all application server requirements." >
        <node name="nUsers" text="" description="" plugin="CreateUsersAndGroups" />

        <node name="nFileSystem" text="File System" description="Changes to file system." >
          <node name="nFileSystemPerms" text="" description="" plugin="FileSystemPerms" />
          <node name="nFileSystemShares" text="" description="" plugin="FileSystemShares" />
        </node>

        <node name="nIIS" text="Configure IIS" description="Configure application pools, web applications, and virtual directories." >
          <node name="nIISWebApps" text="" description="" plugin="IISWebApplications" />
          <node name="nIISVirDirs" text="" description="" plugin="IISVirtualDirectories" />
        </node>
		
		<node name="nMarkupTool" text="Configure Markup Tool" description="Install application pool, web application for Markup Tool and generate config file.">
			<node name="nMarkupToolIIS" text="" description="" plugin="MarkupToolIIS" />
			<node name="nMarkupToolConfigureFiles" text="" description="" plugin="MarkupToolConfigureFiles" />
		</node>

        <node name="nCommon" text="Common Applications and Services" description="" >
          <node name="nCommonChilkat" text="" description="" plugin="CommonAppChilkat" />
	<!--
          <node name="nCommonImageGlue" text="Install Image Glue" description="" plugin="CommonAppImageGlue" />
          <node name="nCommonABC" text="" description="" plugin="CommonAppABCPDF" />
	-->
        </node>

		<!-- <node name="nResetAdminPassword" text="" description="" plugin="ResetAdminPassword" /> -->
        <node name="nMaintenance" text="" description="" plugin="InstallMaintenanceScripts" />
        <node name="nCopySRMOnFiles" text="" description="" plugin="CopySRMOnFiles" />
        <node name="nConfigureFiles" text="" description="" plugin="ConfigureYPLMFiles" />
        <node name="nConfigureSchema" text="" description="" plugin="ConfigureSchemaFiles" />
        <node name="nDesktopShortcuts" text="" description="" plugin="CreateDesktopShortcuts" ensureVisible="true" />
		<node name="nConfigureSQLSession" text="" description="" plugin="ConfigureSQLSession" ensureVisible="true" />
      </node>

      <!--
      <node name="nFileServer" text="File Server" description="Install all file server requirements" >
        <node name="nIIS" text="Configure IIS" description="Configure application pools, web applications, and virtual directories." />
      </node>
      -->

      <node name="nDatabaseServer" text="Database Server" description="Install all database server requirements" >
