          <node name="nReportingRDLTranslation-tr-TR" text="Turkish (Turkey)" description="Translate reports to Turkish (Turkey)" plugin="ReportServerInstallRDLTranslation" args="tr-TR" />
        </node>

        <node name="nReportingReport" text="" description="" plugin="ReportServerInstallReports" />
        <node name="nReportingBI" text="" description="" plugin="ReportServerInstallBI" ensureVisible="true" />
      </node>

